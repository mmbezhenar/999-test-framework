{
  "default": {
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "paths": [
      "src/features/"
    ],
    "dryRun": false,
    "require": [
      "src/step-definitions/api/*.ts",
      "src/step-definitions/ui/*.ts",
      "src/step-definitions/hooks/*.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ],
    "format": [
      "html:cucumber-report.html"
    ],
    "retry": 3
  },
  "api": {
    "paths": [
      "src/features/api/*.api.feature"
    ],
    "require": [
      "src/step-definitions/api/*.ts",
      "src/step-definitions/hooks/after-hook.api.ts",
      "src/step-definitions/hooks/before-hook.api.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ]
  },
  "ui": {
    "paths": [
      "src/features/ui/*.ui.feature"
    ],
    "require": [
      "src/step-definitions/ui/*.ts",
      "src/step-definitions/hooks/after-hook.ts",
      "src/step-definitions/hooks/before-hook.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ],
    "retry" : 2
  }
}
